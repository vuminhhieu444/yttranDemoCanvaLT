@model Yttran.Models.SubMenu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>SubMenu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubMenu.Id" />
            <div class="form-group">
                <label asp-for="SubMenu.Name" class="control-label"></label>
                <input asp-for="SubMenu.Name" name="Name" class="form-control" />
                <span asp-validation-for="SubMenu.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubMenu.MenuId" class="control-label">Parent Menu</label>
                <select asp-for="SubMenu.MenuId" name="MenuId" class="form-control" asp-items="ViewBag.MenuId">
                    @foreach (var item in ViewBag.Menus)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="SubMenu.MenuId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateDate" class="control-label"></label>
                <input asp-for="UpdateDate" class="form-control" />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Admin/SubMenus/Index">Back to List</a>
</div>

