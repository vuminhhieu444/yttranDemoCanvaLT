@model Yttran.Models.ServiceDetail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>ServiceDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceDetail.Id" />
            <div class="form-group">
                <label asp-for="ServiceDetail.MenuId" class="control-label"></label>
                <select asp-for="ServiceDetail.MenuId" name="MenuId" value="ServiceDetail.Menu.Name" id="MenuId" class="form-control" asp-items="ServiceDetail.MenuId">
                    @foreach (var item in ViewBag.Menus)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="ServiceDetail.MenuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceDetail.Detail" class="control-label"></label>
                <input asp-for="ServiceDetail.Detail" name="Detail" class="form-control" />
                <span asp-validation-for="ServiceDetail.Detail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Admin/ServiceDetails/Index">Back to List</a>
</div>

