@model Yttran.Models.Account

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account.UsrerName" class="control-label">User Name</label>
                <input asp-for="Account.UsrerName" name="UsrerName" class="form-control" />
                <span asp-validation-for="Account.UsrerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Password" class="control-label">Password</label>
                <input type="password" asp-for="Account.Password" name="Password" class="form-control" />
                <span asp-validation-for="Password" name="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Admin/Accounts/Index">Back to List</a>
</div>

